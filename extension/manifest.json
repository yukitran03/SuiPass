{
  "manifest_version": 3,
  "name": "SuiPass - Password Manager",
  "version": "1.0.0",
  "description": "Decentralized password manager powered by Sui blockchain",
  
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "tabs"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "SuiPass - Password Manager"
  },
  
  "background": {
    "service_worker": "background/service-worker.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "externally_connectable": {
    "matches": [
      "http://localhost:5173/*"
   ]
  }
}